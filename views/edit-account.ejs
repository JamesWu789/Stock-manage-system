<%- include('./include/head.ejs') %>

    <link rel="stylesheet" href="/Tab_page.css">

    </head>

    <body>
        <main>
            <form class="edit-form" action="/account/edit-account" method="POST">
                <h1>修改資料</h1>
                <label>姓名
                    <input type="text" name="workerName" value="<%= account['workerName'] %>">
                </label>
                <br>
                <label>電話
                    <input type="number" name="phoneNum" value="<%= account['phoneNum'] %>">
                </label>
                <br>
                <label>工作項目
                    <input type="text" name="workItem" value="<%= account['workItem'] %>">
                </label>
                <br>
                <label>帳號
                    <input type="text" name="account" value="<%= account['account'] %>">
                </label>
                <br>
                <label>密碼
                    <input type="text" name="password" value="<%= account['password'] %>">
                </label>
                <br>
                <input type="hidden" value="<%= account._id %>" name="accountId">
                <button type="submit" class="edit-data">修改</button>
                <button class="close-modal">取消</button>
            </form>
        </main>
    </body>