                    </tr>
                    <tr>
                        <td>Content 1</td>
                        <td>Content 2</td>
                        <td>Content 3</td>
                        <td>Content 4</td>
                        <td>Content 5</td>
                        <td>Content 6</td>
                    </tr>
                    <tr>
                        <td>Content 1</td>
                        <td>Content 2</td>
                        <td>Content 3</td>
                        <td>Content 4</td>
                        <td>Content 5</td>
                        <td>Content 6</td>
                    </tr>
                    <tr>
                        <td>Content 1</td>
                        <td>Content 2</td>
                        <td>Content 3</td>
                        <td>Content 4</td>
                        <td>Content 5</td>
                        <td>Content 6</td>
                    </tr>
                    <tr>
                        <td>Content 1</td>
                        <td>Content 2</td>
                        <td>Content 3</td>
                        <td>Content 4</td>
                        <td>Content 5</td>
                        <td>Content 6</td>
                    </tr>
                    <tr>
                        <td>Content 1</td>
                        <td>Content 2</td>
                        <td>Content 3</td>
                        <td>Content 4</td>
                        <td>Content 5</td>
                        <td>Content 6</td>
                    </tr>
                    <tr>
                        <td>Content 1</td>
                        <td>Content 2</td>
                        <td>Content 3</td>
                        <td>Content 4</td>
                        <td>Content 5</td>
                        <td>Content 6</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- 工作紀錄 -->
        <div id="tabs-2">
            <form class="form-content">

                <div class="form-group">
                    <label>地址</label>
                    <select id="city" class="form-control">
                        <option selected>高雄市</option>
                        <option>台北市</option>
                    </select>
                </div>
                <div class="form-group">
                    <div class="form-group form-check mb-1 text-right">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label">同運送地址</label>
                    </div>
                    <select id="dist" class="form-control">
                        <option selected>新興區</option>
                        <option>三民區</option>
                    </select>
                </div>
                <div class="form-group ">
                    <input type="text" class="form-control" placeholder="幸福路 520號">
                </div>

                <div class="form-group">
                    <label>統一編號（選填）</label>
                    <input type="number" class="form-control" id="num" placeholder="12345678">
                </div>
            </form>
        </div>
        <!-- 工作紀錄 -->
        <div id="tabs-3">
            <form class="form-content">
                <div class="form-group">
                    <label>電子郵件信箱</label>
                    <input type="email" class="form-control" id="email" placeholder="example@email.com">
                </div>
                <div class="form-group">
                    <label>統一編號（選填）</label>
                    <input type="number" class="form-control" id="num" placeholder="12345678">
                </div>
            </form>
        </div>
    </div>
