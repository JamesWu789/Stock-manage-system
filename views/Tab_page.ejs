<%- include('./include/head.ejs') %>
    <!--為了tab用 -->
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <!--為了tableSorter用 -->
    <script type="text/javascript" src="/include/jquery.tablesorter.js"></script>
    <link rel="stylesheet" href="/Tab_page.css">

    <%- include('./include/anchor.ejs') %>


        <!-- 庫存 -->
        <div id="tabs-1">
            <a href='#' id="plus-icon">
                <img src="/plus.png" alt="新增">
            </a>
            <form class="modal hidden" action="/main" method="POST">
                <button class="close-modal">&times;</button>
                <h1>新增資料</h1>
                <label>供應商
                    <input type="text" id="provider" name="provider">
                </label>
                <br>
                <label>編號
                    <input type="text" id="idNumber" name="idNumber">
                </label>
                <br>
                <label>尺寸
                    <input type="text" id="specification" name="specification">
                </label>
                <br>
                <label>數量
                    <input type="text" id="quantity" name="quantity">
                </label>
                <br>
                <label>價格
                    <input type="text" id="price" name="price">
                </label>
                <br>
                <label>材質
                    <input type="text" id="texture" name="texture">
                </label>
                <br>
                <button type="submit" class="Add-data">新增</button>
            </form>
            <div class="overlay hidden"></div>

            <a href='##' id="garbage-icon">
                <img src="/trash.png" alt="刪除">
            </a>
            <table class="scroll" id="myTable">
                <thead>
                    <tr>
                        <th>供應商</th>
                        <th>編號</th>
                        <th>尺寸</th>
                        <th>數量</th>
                        <th>價格</th>
                        <th>材質</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let num = 0; num < prods.length; num++){ %>
                        <tr>
                            <td>
                                <%= prods[num]["provider"] %>
                            </td>
                            <td>
                                <%= prods[num]["idNumber"] %>
                            </td>
                            <td>
                                <%= prods[num]["specification"] %>
                            </td>
                            <td>
                                <%= prods[num]["quantity"] %>
                            </td>
                            <td>
                                <%= prods[num]["price"] %>
                            </td>
                            <td>
                                <%= prods[num]["texture"] %>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
        </body>